extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/add')
    #form-group
      label Title:
      input.form-control(name='title', type='text')
    #form-group
      label Body:
      textarea.form-control(name='body')
    #form-group
      label File:
      input.form-control(name='file', type='file', class='custom-file-input' enctype='multipart/form-data')
    br
    input.btn.btn-primary(type='submit',value='Submit')
